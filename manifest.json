{
  "manifest_version": 3,
  "name": "Gemini Chat Exporter",
  "version": "1.1.1",
  "description": "Export Gemini chats to HTML/Markdown. Batch delete conversations",
  "author": "zhenhua zhang",
  "homepage_url": "https://github.com/nkzhenhua/gemini-exporter",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "48": "icons/android-icon-48x48.png",
      "128": "icons/android-icon-144x144.png"
    }
  },
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/android-icon-48x48.png",
    "128": "icons/android-icon-144x144.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://*.google.com/app/gemini*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "batch-delete.css"
      ],
      "matches": [
        "https://gemini.google.com/*"
      ]
    }
  ]
}